<h2 class="page-header"><%= company.name %></h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/companies/<%= company.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', { url: `/companies/${company.id}` }) %>
</div>

<% if(gamesByCompany.length > 0) { %>
<h2 class="page-header">Games By Company</h2>
<% gamesByCompany.forEach(game => { %>
<a href="/games/<%= game.id %>">
    <img src="<%= game.coverImagePath %>" height="150" width="100">
</a>
<% }) %>
<% } %>