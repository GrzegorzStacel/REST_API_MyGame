<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= game.title %>">
</div>
<div>

    <label>Company</label>
    <select name="company">
        <% companies.forEach(company => { %>
        <% if(company.id === game.company) { %>
        <option selected label="<%= company.name %>" value="<%= company.id %>">
            <% } else { %>
        <option label="<%= company.name %>" value="<%= company.id %>">
            <% } %>
            <% }) %>
    </select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate"
    value="<%= game.publishDate == null ? '' : game.publishDate.toISOString().split('T')[0]  %>">
</div>
<div>
    <label>Scheduled game time</label>
    <input type="number" min="1" name="playTime" value="<%= game.playTime %>">
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label>Description</label>
    <textarea name="description" value="<%= game.description %>"></textarea>
</div>